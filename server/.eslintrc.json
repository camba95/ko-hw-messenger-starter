{
  "env": {
    "commonjs": true,
    "jest": true,
    "node": true,
    "es6": true
  },
  "ignorePatterns": "node_modules/",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": "error",
    "no-unused-vars": "error",
    "eol-last": "error",
    "indent": [
      "error",
      2
    ],
    "arrow-spacing": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "key-spacing": "error",
    "space-infix-ops": "error",
    "no-trailing-spaces": "error",
    "max-len": [
      "error",
      {
        "code": 100,
        "ignoreComments": true
      }
    ],
    "quotes": [
      "error",
      "double"
    ]
  }
}
